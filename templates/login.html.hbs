<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/static/components.css" />
		<link rel="stylesheet" href="/static/index.css" />
    <title>IFoundThePhone - Sign Up</title>
  </head>
  <body>
		<section class="form-page">
			<section class="form-container">
				<h1>Log in to IFoundThePhone</h1>
				<p>Don't have an account? <a href="/signup">Create one here</a>.</p>
			<form class="text-form main" method="POST">
				<h3>Email:</h3>
				{{#if emailError}}
					<input type="email" class="form-input error-input" name="email" />
					<p class="error-text">{{emailError}}</p>
				{{else}}
					<input type="email" class="form-input" name="email" value="{{email}}"/>
				{{/if}}
				<h3>Password:</h3>
				{{#if passwordError}}
					<input class="form-input error-input" type="password" name="password"></input>
					<p class="error-text">{{passwordError}}</p>
				{{else}}
					<input class="form-input" type="password" name="password" value={{password}}></input>
				{{/if}}
				<button type="submit" class="submit-btn btn">Log in</button>
			</form>
			</section>	
		</section>
  </body>
</html>